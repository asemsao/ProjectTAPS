<sqlMap namespace="manageRole">
	<typeAlias alias="roleBean" type="adins.ace.taps.bean.manageRole.RoleBean" />
	<typeAlias alias="menuBean" type="adins.ace.taps.bean.manageRole.MenuBean" />
	
	<select id="searchListRole" resultClass="roleBean"
	parameterClass="java.util.Map">
		select role_id as roleId, role_name as roleName from roles
	</select>
	
	<select id="searchListMenu" resultClass="menuBean"
	parameterClass="java.lang.String">
		select m.menu_id as menuId, m.menu_name as menuName, m.task as task, m.description as description, 
		(select count(1) from role_menu rm where rm.role_id=#roleId# and rm.menu_id = m.menu_id) as isExist from menu m
	</select>
	
